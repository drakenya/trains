{% extends 'base.html.twig' %}

{% block title %}AarCode index{% endblock %}

{% block body %}
    <h1>AarCode index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Class</th>
                <th>CommonName</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aar_code in aar_codes %}
            <tr>
                <td>{{ aar_code.id }}</td>
                <td>{{ aar_code.code }}</td>
                <td>{{ aar_code.class }}</td>
                <td>{{ aar_code.commonName }}</td>
                <td>{{ aar_code.description }}</td>
                <td>
                    <a href="{{ path('aar_code_show', {'id': aar_code.id}) }}">show</a>
                    <a href="{{ path('aar_code_edit', {'id': aar_code.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('aar_code_new') }}">Create new</a>
{% endblock %}