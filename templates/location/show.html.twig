{% extends 'base.html.twig' %}

{% block title %}Location{% endblock %}

{% block body %}
    <h1>Location</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ location.id }}</td>
            </tr>
            <tr>
                <th>StationNumber</th>
                <td>{{ location.stationNumber }}</td>
            </tr>
            <tr>
                <th>StationName</th>
                <td>{{ location.stationName }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ location.state }}</td>
            </tr>
            <tr>
                <th>OnLayout</th>
                <td>{{ location.onLayout ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('location_index') }}">back to list</a>

    <a href="{{ path('location_edit', {'id': location.id}) }}">edit</a>

    {{ include('location/_delete_form.html.twig') }}
{% endblock %}